<%= render partial: '/static/header' %>

<% if @user.industry == 'Web Development' %>
<div class="jumbotron cover-photo web-skin">
	<div class="container">
		<h1><%= @user.first_name %> <%= @user.last_name %></h1>
		<h2><%= @user.industry %></h2>
			<!-- avatar goes here -->
			<% if @user.avatar.exists? %>
				<div class="mentor-image absolute-center" style="background: url(<%= @user.avatar.url(:medium) %>) no-repeat center center; background-size: cover;"></div>
			<% else %>
				<div class="info-icon mentor-image absolute-center"><i class="fa fa-user fa-2x"></i></div>
			<% end %>
	</div>
</div>
<% end %>

