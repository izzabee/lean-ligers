<section class="user-homepage">
	<div class="container">

	<p id="notice"><%= notice %></p>



	<div class="row">
		<ul class="social-icons col-md-4 col-md-offset-4">
			<li><a href="#"><i class="fa fa-linkedin"></i></a></li>
			<li><a href="#"><i class="fa fa-twitter"></i></a></li>
			<li><a href="https://<%= @user.site %>" target="_blank"><i class="fa fa-home"></i></a></li>
		</ul>
	</div>
	<div class="row">
		<% if @user.type == 'Mentor' %>
			<%= render 'users/mentors/mentor' %>
		<% else %>
			<%= render 'users/mentees/mentee' %>
		<% end %>
	</div>


	<!-- <p>Seeking: <%= @user.type == 'Mentee' ? 'A mentor in ' : 'A mentee interested in ' %> <%= @user.industry %> </p>
	<p>Email: <%= @user.email %> </p>
	<p>Outside of work, I enjoy <%= @user.quote %> </p> -->
	<div class="row">
		<div class="col-sm-4 col-sm-offset-4 border-right">
			<h2> <%= @user.current_job %></h2>
			<h3><%= @user.location %> </h3>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-4 col-sm-offset-1">
			<h3>Quote</h3>
			<p class="quote"><i class="fa fa-quote-left"></i><%= @user.quote %><i class="fa fa-quote-right"></i></p>
		</div>
		<div class="col-sm-4 col-sm-offset-2">
			<h3>Fun Facts</h3>
			<p class="quote"><i class="fa fa-quote-left"></i><%= @user.fun_fact %><i class="fa fa-quote-right"></i></p>
		</div>
		</div>
		<div class="row">
		<div class="col-sm-4 col-sm-offset-4">
			<h3>Links / Resources</h3>
			<p class="quote"><%= @user.site %></p>
		</div>
	</div>



	</div>
</section>
