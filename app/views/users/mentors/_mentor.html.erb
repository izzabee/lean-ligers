
<!-- rendering the correct button depending on current relationship -->

<% if current_user && @user.mentorships.where(mentee_id: current_user.id, confirmed: true).exists? %>
	<button class="pending mentorship-request btn btn-default <%= @user.id %> pending" disabled="disabled" style="background-color:#DC143C">
		Current Mentor
	</button>
<% elsif current_user && @user.mentorships.where(mentee_id: current_user.id, confirmed: false).exists? %>
	<button class="pending mentorship-request btn btn-default <%= @user.id %> pending" disabled="disabled" style="background-color:gray;">
		Request Pending
	</button>
<% elsif !current_user %>
	<a class="btn btn-default mentorship-request" href="/users/new">
		Request Mentorship
	</a>
<% else %>
	<button id="<%= @user.id %>" class="available mentorship-request <%= @user.id %> exists btn btn-default mentorship-request">
		Request Mentorship
	</button>
<% end %>

