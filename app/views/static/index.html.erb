<!DOCTYPE html>

<section class="home">
  <div class="jumbotron">
    <div class="container">

      <%= render partial: 'header' %>

      <h1>CareerCupid</h1>
      <h2>Find a Mentor. Find a Career you Love.</h2>


      <form class="form-inline quick-search">
        <div class="form-group">
          <label><h4>I'm looking for a career in </h4></label><select type="career" class="form-control" id="industryExample1" placeholder="Tech">
            <option value="all">All Careers</option>
            <option value="product">Product Management</option>
            <option value="design">UI/UX Design</option>
            <option value="dev">Web Development</option>
          </select>

          <!-- need to submit the value of the select and append to the url /mentors/value, then make an ajax call to url and grab the value -->

          <a href="/mentors" class="btn btn-default">GO!</a>
        </div>
      </form>
    </div>
  </div>
</section>
<section class="info">
  <div class="container">
    <div class="row">
      <h1>New Mentors</h1>

      <% @mentors.where(first_name: "Matt").each do |mentor| %>
        <div class="col-sm-4 mentor-web">
          <% if mentor.avatar.exists? %>
            <a href="/mentors/<%= mentor.id %>" class="directory-image" style="background: url(<%= mentor.avatar.url(:medium) %>) no-repeat center center; background-size: cover;"></a>
          <% else %>
            <a href="<%= mentor_path(mentor.id) %>" class="mentor-icon"><i class="fa fa-user fa-2x"></i><a>
          <% end %>
          <h2><%= link_to mentor.first_name, mentor_path(mentor.id) %></h2>
          <h3><%= mentor.industry %></h3>
        </div>
      <% end %>

      <% @mentors.where(first_name: "Colleen").each do |mentor| %>
        <div class="col-sm-4 mentor-pm">
          <% if mentor.avatar.exists? %>
            <a href="/mentors/<%= mentor.id %>" class="directory-image" style="background: url(<%= mentor.avatar.url(:medium) %>) no-repeat center center; background-size: cover;"></a>
          <% else %>
            <a href="<%= mentor_path(mentor.id) %>" class="mentor-icon"><i class="fa fa-user fa-2x"></i><a>
          <% end %>
          <h2><%= link_to mentor.first_name, mentor_path(mentor.id) %></h2>
          <h3><%= mentor.industry %></h3>
        </div>
      <% end %>

      <% @mentors.where(first_name: "Marco").each do |mentor| %>
        <div class="col-sm-4 mentor-ux">
          <% if mentor.avatar.exists? %>
    				<a href="/mentors/<%= mentor.id %>" class="directory-image" style="background: url(<%= mentor.avatar.url(:medium) %>) no-repeat center center; background-size: cover;"></a>
    			<% else %>
            <a href="<%= mentor_path(mentor.id) %>" class="mentor-icon"><i class="fa fa-user fa-2x"></i><a>
    			<% end %>
          <h2><%= link_to mentor.first_name, mentor_path(mentor.id) %></h2>
          <h3><%= mentor.industry %></h3>
        </div>
      <% end %>

    </div>
  </div>
</section>

<%= render partial: '/static/signup', locals:{user: @user} %>
